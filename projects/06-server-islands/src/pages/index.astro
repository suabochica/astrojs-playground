---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content'

const books = await getCollection('books')
---

<Layout title="Welcome to Astro.">
	<main>
		<h1 class="text-center text-7xl font-extrabold mb-24">Dev üßë‚Äçüíª <span class="block">Books</span></h1>

		<section aria-label="Libros recomendados para programadores">
			<div class="px-4 mx-auto max-w-screen-xl">
				<div class="grid grap-6 md:grid-cols-2">
					{
						books.map((book: { slug: any; data: any; }) => {
							const { slug, data } = book
							const { title, author, img, readtime, description, buy } = data

							return (
								<article class="flex">
									<a href={`/libro/${slug}`} class="mb-2 xl:mb-0 transition hover:scale-110">
										<img src={`/${img}`} alt={title} class="w-full rounded-lg mr-5 w-48"/>
									</a>
									<div class="flex flex-col justify-center">
										<h2 class="mb-2 text-2xl font-bold leading-tight text-white">{title}</h2>
										<p class="text-gray-300 max-w-sm">{description}</p>
										<p class="text-s mb-4">{author}</p>
										<span class="text-xs">Lectura en {readtime} minutos</span>
									</div>
								</article>
							)
						})
					}
				</div>
			</div>
		</section>
	</main>
</Layout>
