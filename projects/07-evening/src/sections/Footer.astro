---
import ThemeToggle from '@/components/ThemeToggle.astro'
import InstragramIcon from '@/icons/Instagram.astro'
import XIcon from '@/icons/X.astro'
---

<footer class="mt-20 w-full border-primary border-t-2 flex flex-col md:flex-row justify-center items-center md:justifty-between pt-10 pb-20 gap-y-10">
  <span class="text-primary text-center">
    © 2024 La Velada del Año <span aria-hidden class="hidden md:inline">|</span
    ><br aria-hidden class="block md:hidden" /> Todos los derechos reservados.
  </span>
  <ul class="flex flex-row gap-x-6 items-center">
    <li>
      <a
        aria-label="Instagram de la Velada"
        target="_blank"
        rel="noopener"
        href="https://www.instagram.com/infolavelada"
        class="hover:scale-125 hover:opacity-70 transition inline-block"
      >
        <InstragramIcon class="text-primary"/>
      </a>
    </li>
    <li>
      <a
        aria-label="X de la Velada"
        class="hover:scale-125 hover:opacity-70 transition inline-block"
        target="_blank"
        rel="noopener"
        href="https://x.com/infoLaVelada"
      >
        <XIcon class="text-primary"/>
      </a>
    </li>
    <li>
      <ThemeToggle />
    </li>
  </ul>
</footer>