---
import Layout from "@/layouts/Layout.astro"

import HeroContainer from "@/components/HeroContainer.astro"

import { getI18N } from "@/i18n"

const edition = "2"
const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<Layout
  title={i18n.SEO.ARCHIVO_TITLE}
  description={i18n.SEO.ARCHIVO_DESCRIPTION}
>
  <HeroContainer img="/archivo-background.wbps">
    <h1 class="lg:text-6xl text-4xl text-center uppercase mb-20 tracking-widest">{i18n.ARCHIVO.HERO_TITLE}</h1>
  </HeroContainer>

  <main class="pb-24">
    <h2 class="text-4xl text-center mb-12">Preact components</h2>
  </main>
</Layout>