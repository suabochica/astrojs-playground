---
import Layout from "@/layouts/Layout.astro"

import HeroContainer from "@/components/HeroContainer.astro"

import { getI18N } from "@/i18n"

const { currentLocale } = Astro

const i18n = getI18N({ currentLocale })
---

<Layout
  title=`${i18n.SEO.INFO_TITLE}``
  description=`${i18n.SEO.INFO_DESCRIPTION_1}``
>
  <HeroContainer img="/info-background.webp">
    <h1
      class="lg:text-6xl text-5xl text-center uppercase font-tomaso tracking tracking-widest"
    >
      {i18n.INFO_TITLE}
    </h1>
  </HeroContainer>
</Layout>