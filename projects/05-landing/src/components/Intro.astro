---
import Logo from "./Logo.astro";

import { getI18N } from "@/i18n/";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<section class="text-xl text-left text-pretty
  px-20 max-2-[70ch] mx-aut my 24">
  <Logo class="w-16 text-white m-auto" />
  <h1
    class="text-4xl text-white font-semibold text-center text-wrap mx-auto mb-10 tracking-wide"
  >
    {i18n.INTRO_TITLE}
    <br />
    {i18n.INTRO_TITLE_AFTER_BR}
  </h1>
  <p set:html={i18n.INTRO_DESCRIPTION_1} />
  <p set:html={i18n.INTRO_DESCRIPTION_2} />
  <p set:html={i18n.INTRO_DESCRIPTION_3} />
</section>
