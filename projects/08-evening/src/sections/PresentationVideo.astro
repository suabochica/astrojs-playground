---
import LiteYouTube from "@/components/LiteYouTube.astro"
import Typography from "@/components/Typography.astro"
---

<section class="my-40 px-2 md:my-80">
  <Typography as="h3" variant="atomic-title" color="accent" class:list={"text-center"}>
    Presentación
  </Typography>

  <Typography
    as="p"
    variant="body"
    color="neutral"
    class:list={"mt-4 mx-auto max-w-[250px] text-wrap text-center"}>
      Revive la presentación en el Teatro Victoria
    </Typography>
    <div class="relative mt-8">
      <img
			aria-hidden="true"
			class="absolute inset-0 -z-10 m-auto scale-125"
			src="/images/drawn-x-logo.webp"
			alt="Logo X de La Velada dibujado a mano"
		/>

		<LiteYouTube videoId="ct0Hr6zYZGU" backgroundImage="/images/video-presentation-cover.webp" />
    </div>
</section>
