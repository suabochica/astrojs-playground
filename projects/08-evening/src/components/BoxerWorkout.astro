import LiteYouTube from "@/components/LiteYouTube.astro"
import SectionTitle from "@/components/SectionTitle.astro"

interface Props {
  workout?: {
    videoId: string
    thumbnail: string
  }
}

const { workout = undefined } = Astro.props
const hasWorkout = workout !== undefined
---

{
  hasWorkout && (
    <section class="mb-10 mt-20 md:my-44">
      <SectionTitle
        title="Entrenamiento"
