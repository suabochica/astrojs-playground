---
import { type APISpaceXResponse } from '../types/apiSpaceX'
import CardLaunch from './CardLaunch.astro'

const response = await fetch('https://api.spacexdata.com/v5/launches/query', {
    method: "POST",
    headers: {
        "Content-Type": "application/json"
    },
    body: JSON.stringify({
        query: {},
        options: {
            sort: {
                date_unix: "asc"
            },
            limit: 12,
        },
    })
})

const { docs: launches } = await response.json() as APISpaceXResponse
---

<div class="grid gap-8 sm:grid-cols-2 lag:grid-cols-3">
    {
        launches.map(launch => (
            <CardLaunch
                id={launch.id}
                image={launch.links.patch.small}
                details={launch.details}
                flightNumber={launch.flight_number}
                success={launch.success}
            />
        ))
    }
</div>